<!--- Na przyszłość: nie wiem, dlaczego ale quiz_url(params) nie dziala    ---->
<%= link_to "Pokaż quiz", quiz_url(:id_grupy => params[:id_grupy], :id_quizu => params[:id_quizu]) %>
<% if current_user.id_uz == @quiz.id_wlasciciela %>
    <% for pytanie in @quiz.pytania %>
        <%= render :partial => "pytanie_edit_form", :locals => { :pytanie => pytanie } %>
    <% end %>
    <%= render :partial => "pytanie_edit_form", :locals => {:pytanie => @nowe_pytanie } %>
<% else %>
    "To nie jest twoj quiz"
<% end %>