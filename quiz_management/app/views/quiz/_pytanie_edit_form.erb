<h2>Pytanie</h2>
<%#= form_for pytanie, :url =>  {:controller => :pytanie, :action => (if pytanie.id_pyt then :edit else :create end)},
             :html => {:class => 'form-horizontal'} do |f| %>
    <% if pytanie.errors.any? %>
        <div id="error_explanation">
          <h2><%= "blad" %> nie pozwolil uzytkownikowi na zapis:</h2>

          <ul>
            <% pytanie.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%#= label "Tresc" %><br />
      Tresc
      <%= text_area :tresc, :size => "30x4" %>
    </div>

    <div class="field">
      Typ
      <%#= label "Typ" %>
    <%#= select :id_typu, options_for_select(Typ.all.map{ |t| [t.nazwa, t.id_typu] }, pytanie.id_typu) %>
    </div>

    <div class="field">
      Kategoria
      <%#= label "Kategoria" %>
    <%#= select :id_kategorii, options_for_select(Kategoria.all.map{ |k| [k.nazwa, k.id_kategorii] }, :selected => :id_kategorii) %>
    </div>

    <div class="field">
      Punkty
      <%#= label "Punkty" %>
    <%= text_field :pkt, :size => 5 %>
    </div>

    <%#= hidden_field :id_pyt if pytanie.id_pyt %>
    <%#= hidden_field :id_quizu %>

    <div class="actions">
      <%#= submit "Edytuj" %>
    </div>

<%# end %>

<%#= link_to 'Edytuj', pytanie_edit_url(:id_pyt => pytanie.id_pyt), :class => 'btn btn-warning' %>
<% if pytanie.id_pyt then %>
    <%= button_to "Edytuj", pytanie_edit_url(:id_pyt => pytanie.id_pyt), :id_pyt => pytanie.id_pyt, :method => "get" %>
    <%= button_to "Usuń", pytanie_destroy_url(params.merge :id_pyt => pytanie.id_pyt, :pytanie => pytanie.attributes), {:method => "delete"}%>
<% else %>
    <%= button_to "Stwórz", pytanie_create_url %>
<% end %>