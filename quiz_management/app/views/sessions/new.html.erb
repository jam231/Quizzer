<h1 class="header">Logowanie</h1>

<%= form_tag sessions_path, :class => 'form-horizontal' do %>
    <div class="control-group">
      <%= label_tag :login, 'Login', :class => 'control-label', :for => 'inputLogin'%>
      <div class="controls">
        <%= text_field_tag :login, params[:login], :id => 'inputLogin', :placeholder => 'Login' %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag :password, 'Hasło', :class => 'control-label', :for => 'inputPassword' %>
      <div class="controls">
        <%= password_field_tag :password, nil, :id => 'inputPassword', :placeholder => 'Hasło' %>
      </div>
    </div>
    <div class="control-group form-buttons">
      <button type="submit" class="btn btn-primary" name='commit'>Zaloguj</button> lub <%= link_to 'Zarejestruj nowe konto', new_uzytkownik_path%>
    </div>
<% end %>