<div class="container-fluid">
  <div class="row-fluid">
    <h2 class="header centered"> Przeniesienie autorstwa quizu <i> <%= @quiz.nazwa %> </i> </h2>
    <h3> Informacje o quizie: </h3>

    <%= content_tag :h4, "Data utworzenia : #{@quiz.data_utworzenia} ", :class => "header" if @quiz.data_utworzenia %>
    <%= content_tag :h4, "Limit czasowy  : #{@quiz.limit_czasowy} ", :class => "header" if @quiz.limit_czasowy %>
    <%= content_tag :h4 , "Limit podejść  : #{@quiz.limit_podejsc} ", :class => "header" if @quiz.limit_podejsc %>
    </br>
    <%= content_tag :h3 , "Historia", :class => "header centered" %>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Zdobyte punkty</th>
        <th>Punkty do zdobycia</th>
        <th>Data</th>
      </tr>
      </thead>
      <% @attempts.each do |score, max_points, date| %>
          <tr>
            <%= content_tag :td, score , :class => score_tag_class(score, max_points)%>
            <td>
              <%= max_points %>
            </td>
            <td>
              <%= date %>
            </td>
          </tr>
      <% end %>
    </table>
    <div class="row-fluid text-center">
      <%= link_to "Powrót do grupy", grupa_url, :class => "btn btn-primary" %>
    </div>
  </div>
</div>