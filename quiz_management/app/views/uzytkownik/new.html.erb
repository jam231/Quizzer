<h1 class="header">Rejestracja </h1>
<%= form_for @user, :url =>  {:controller => :uzytkownik, :action => :create},
                    :html => {:class => 'form-horizontal'} do |f| %>
    <div class="control-group">
      <%= f.label :nazwa_uz, 'Nazwa użytkownika', :class => 'control-label span2,', :for => 'inputNazwaUz'%>
      <div class="controls">
        <%= f.text_field :nazwa_uz, :class => 'span2', :id => 'inputNazwaUz', :placeholder => 'Nazwa użytkownika' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :login, 'Login', :class => 'control-label span2', :for => 'inputLogin'%>
      <div class="controls">
        <%= f.text_field :login, :class => 'span2', :id => 'inputLogin', :placeholder => 'Login' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password, 'Hasło', :class => 'control-label span2', :for => 'inputPassword' %>
      <div class="controls">
        <%= f.password_field :password, :class => 'span2', :id => 'inputPassword', :placeholder => 'Hasło' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password_confirmation, 'Powtórz hasło', :class => 'control-label span2', :for => 'inputPassword' %>
      <div class="controls">
        <%= f.password_field :password_confirmation, :class => 'span2', :id => 'inputPassword', :placeholder => 'Powtórz hasło' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :email, 'Adres email', :class => 'control-label span2', :for => 'inputEmail'%>
      <div class="controls">
        <%= f.text_field :email, :class => 'span2', :id => 'inputLogin', :placeholder => 'Adres email' %>
      </div>
    </div>
    <div class="control-group form-buttons">
      <button type="submit" class="btn btn-primary" name='commit'>Zarejestruj</button> lub <%= link_to 'Zaloguj na już istniejące konto', log_in_url%>
    </div>
<%end %>