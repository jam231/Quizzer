<h3 class="header centered">Ranking dla grupy <%= @grupa.nazwa %></h3>
<table class="table table-hover">
  <thead>
  <tr>
    <th>#</th>
    <th>Użytkownik</th>
    <th>Liczba punktów</th>
  </tr>
  </thead>
  <% @ranking.each_with_index do |ranking_row, index| %>
      <%if @grupa.has_privileges? ranking_row.uzytkownik, :participation_in_quizzes %>
      <tr>
        <td>
          <%= index + 1 %>
        </td>
        <td>
          <%= ranking_row.uzytkownik[:nazwa_uz] %>
        </td>
        <td>
          <%= ranking_row[:pkt] %>
        </td>
      </tr>
     <% end %>
  <% end %>
</table>

<% @ranking.all.each { |ranking_field|} %>