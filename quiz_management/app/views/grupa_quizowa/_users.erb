<h3 class="header centered">Użytkownicy zapisani do grupy</h3>
<table class="table table-hover">
  <thead>
  <tr>
    <th>
      #
    </th>
    <th>
      Nazwa użytkownika
    </th>
  </tr>
  </thead>
  <tbody>
  <% @users.each_with_index do |user, index|%>
      <tr>
        <td>
          <%= index + 1 %>
        </td>
        <td>
          <%= user.nazwa_uz %>
        </td>
        <% if @grupa.has_privileges? current_user, :deleting_users and not @grupa.owner? user%>
        <td>
          <%= link_to 'Usuń z grupy', grupa_delete_user_url(@grupa, user), :class => 'btn btn-danger', :method => :delete,
                                      :confirm => "Jesteś pewny, że chcesz usunąć użytkownika #{user.nazwa_uz}" %>
        </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

