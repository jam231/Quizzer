<% puts "----- #{odpowiedz.tresc_odp}" %>
<h3>Odpowied≈∫</h3>
<%= form_for(odpowiedz) do |f| %>

    <div class="field">
      <%= f.label "Tresc odpowiedzi:" %><br />
      <% if odpowiedz.ost_modyfikacja %>
        <%= f.label :tresc_odp, odpowiedz.tresc_odp %><br />
      <% else %>
        <%= f.text_area :tresc_odp, :size=> "60x2" %>
      <%end %>
    </div>

    <div class="field">
      <%= f.label "Komentarz do odpowiedzi" %><br />
      <%= f.text_area :komentarz,  :size => "60x1" %>
    </div>

    <div class="field">
      <%= f.label "Poziom_poprawnosci" %><br />
      <%= f.text_field :poziom_poprawnosci, :size => 5 %>
    </div>

    <%= f.hidden_field :id_pyt %>
    <%= f.hidden_field :tresc_odp if odpowiedz.ost_modyfikacja %>

    <div class="actions">
      <%= f.submit "Zapisz" %>
    </div>

<% end %>
<%= button_to "Usun", odpowiedz_wzorcowa_path(odpowiedz, :odpowiedz_wzorcowa => odpowiedz.attributes), {:method => "delete"} if odpowiedz.ost_modyfikacja %>